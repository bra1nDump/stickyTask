    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/lib/runner.js",
            "args": ["--name", "Kirill"],
            "preLaunchTask": "Compile",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        }
    ]
}
